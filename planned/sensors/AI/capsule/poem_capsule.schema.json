{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Field Poem Capsule",
  "type": "object",
  "properties": {
    "capsule": {
      "type": "object",
      "required": ["sid", "seq", "ctx", "glyph", "text", "provenance"],
      "properties": {
        "sid": { "type": "string", "description": "session id (e.g. SWARM-01)" },
        "seq": { "type": "integer", "minimum": 0 },
        "ctx": { "type": "string", "description": "brief context/intent" },
        "glyph": { "type": "string", "description": "short glyph header line" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "text": { "type": "string", "description": "the poem capsule" },
        "shapes": { "type": "array", "items": { "type": "string" }, "description": "optional: shape ids/links" },
        "provenance": {
          "type": "object",
          "required": ["who", "ts", "status"],
          "properties": {
            "who": { "type": "string" },
            "ts": { "type": "string" },
            "status": { "type": "string", "enum": ["provisional","confirmed"] },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "hash": { "type": "string" }
      }
    }
  },
  "required": ["capsule"]
}
